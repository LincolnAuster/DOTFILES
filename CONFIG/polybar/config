[colors]
background = #00111111
foreground = #ff000000

font = Goudy Bookletter 1911:fontformat=truetype:size=14:antialias=true;0

[bar/music]
override-redirect = true

height = 32
width = 80%
offset-x = 148
offset-y = 8

font-0 = ${colors.font}

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = mocp

[bar/date]
override-redirect = true

scroll-up = amixer sset Master 5%+
scroll-down = amixer sset Master 5%-

height = 32
width = 70
offset-x = 48
offset-y = 8

font-0 = ${colors.font}

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = date

[module/date]
type = internal/date
interval = 5

time = "%I:%M    |"
label = "%time%"

[module/mocp]
type = custom/script
interval = 1

exec = mocp -Q "%song (%tl)"
click-left  = mocp -G
scroll-up   = mocp -r
scroll-down = mocp -f
